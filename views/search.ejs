<!DOCTYPE html>
<html lang="hu">
  <head>
    <title>MEG - Uploaded Files</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.png" />

    <!-- Include Dropzone.js CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/dropzone.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <style>
      /* Custom styles */
      body {
        padding-top: 56px; /* Adjust this value based on your navbar height */
      }

      th {
        cursor: pointer;
        position: relative;
      }

      .arrow {
        vertical-align: middle;
        width: 12px; /* Adjust width as needed */
        height: 12px; /* Adjust height as needed */
        margin-left: 5px;
      }

      /* Skeleton Loader Styles */
      .skeleton-loader {
        flex-direction: column;
        align-items: stretch;
        gap: 10px; /* Adjust spacing between blocks */
      }

      .skeleton-loader.show {
        display: flex;
      }

      .skeleton-loader.hide {
        display: none;
      }

      .skeleton-block {
        width: 100%;
        height: 60px; /* Adjust height of each block */
        background-color: #cccaca; /* Adjust background color */
        border-radius: 4px; /* Adjust border radius */
        animation: loadingAnimation 1s ease-in-out infinite; /* Animation */
      }

      @keyframes loadingAnimation {
        0% {
          opacity: 0.7;
        }
        50% {
          opacity: 0.4;
        }
        100% {
          opacity: 0.7;
        }
      }
    </style>
  </head>
  <body>
    <!-- Include the navbar -->
    <%- include('navbar.ejs') %>

    <!-- Content -->
    <div class="container-fluid mt-5">
      <div class="row">
        <h1 class="col-md-6">Stored Files</h1>
        <div class="col-md-6">
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1"><img src="/images/icons/search-icon.png" alt="Search" width="16" /></span>
            <input type="text" class="form-control" id="searchInput" placeholder="Search..." aria-describedby="basic-addon1" />
          </div>
        </div>
      </div>
      <div class="table-responsive" id="tableParent">
        <div class="skeleton-loader hide">
          <div class="skeleton-block"></div>
          <div class="skeleton-block"></div>
          <div class="skeleton-block"></div>
        </div>
      </div>
    </div>

    <!-- Remove file modal -->
    <div class="modal fade" id="removeFileModal" tabindex="-1" role="dialog" aria-labelledby="removeFileModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="removeFileModalLabel">Remove File</h5>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to remove this file?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Exit</button>
            <button type="button" class="btn btn-danger" id="confirmRemove">Yes</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Share file modal -->
    <div class="modal fade" id="shareFileModal" tabindex="-1" role="dialog" aria-labelledby="shareFileModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="removeFileModalLabel">Share file</h5>
          </div>
          <div class="modal-body">
            <div id="shareLinkContainer">
              <input type="text" class="form-control mb-2" id="shareLink" readonly />
              <button class="btn btn-info" id="copyToClipboard">Copy to Clipboard</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="/js/search.js"></script>
  </body>
</html>
