<!DOCTYPE html>
<html lang="hu">
  <head>
    <title>MEG - Uploaded Files</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.png" />

    <!-- Include Dropzone.js CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/dropzone.min.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <style>
      /* Custom styles */
      body {
        padding-top: 56px; /* Adjust this value based on your navbar height */
      }

      th {
        cursor: pointer;
        position: relative;
      }

      .arrow {
        vertical-align: middle;
        width: 12px; /* Adjust width as needed */
        height: 12px; /* Adjust height as needed */
        margin-left: 5px;
      }
    </style>
  </head>
  <body>
    <!-- Include the navbar -->
    <%- include('navbar.ejs') %>

    <!-- Content -->
    <div class="container-fluid mt-5">
      <div class="row">
        <h1 class="col-md-6">Stored Files</h1>
        <div class="col-md-6">
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1"><img src="/images/icons/search-icon.png" alt="Search" width="16" /></span>
            <input type="text" class="form-control" id="searchInput" placeholder="Search..." aria-describedby="basic-addon1" />
          </div>
        </div>
      </div>
      <% if (files.length === 0) { %>
      <div id="noFilesMessage">No files uploaded..</div>
      <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped" id="data-table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col" id="sortable">
                Name <% if (sort.sort === "name") { %>
                <img src="/images/icons/arrow-<%= sort.dir %>.svg" alt="<%= sort.dir %>" class="arrow <%= sort.dir %>" />
                <% } %>
              </th>
              <th scope="col" id="sortable">
                Size <% if (sort.sort === "size") { %>
                <img src="/images/icons/arrow-<%= sort.dir %>.svg" alt="<%= sort.dir %>" class="arrow <%= sort.dir %>" />
                <% } %>
              </th>
              <th scope="col" id="sortable">
                Type<% if (sort.sort === "type") { %>
                <img src="/images/icons/arrow-<%= sort.dir %>.svg" alt="<%= sort.dir %>" class="arrow <%= sort.dir %>" />
                <% } %>
              </th>
              <th scope="col" id="sortable">
                Views<% if (sort.sort === "views") { %>
                <img src="/images/icons/arrow-<%= sort.dir %>.svg" alt="<%= sort.dir %>" class="arrow <%= sort.dir %>" />
                <% } %>
              </th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% files.forEach((file, index) => { %>
            <tr>
              <th scope="row"><%= index %></th>
              <td>
                <% if (file.shareableLink) { %>
                <a href="/<%= file.shareableLink %>" target="_blank"><%= file.name %></a>
                <% } else { %> <%= file.name %> <% } %>
              </td>
              <td><%= file.size %></td>
              <td><%= file.type %></td>
              <td><%= file.viewCount %></td>
              <td>
                <button class="btn btn-danger delete-btn" data-file-id="<%= file._id %>">Remove</button>

                <% if (file.isShared) { %>
                <button class="btn btn-warning share-btn" data-file-id="<%= file._id %>">Remove Share</button>
                <% } else { %>
                <button class="btn btn-primary share-btn" data-file-id="<%= file._id %>">Share</button>
                <% } %>
              </td>
            </tr>

            <% })}; %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Remove file modal -->
    <div class="modal fade" id="removeFileModal" tabindex="-1" role="dialog" aria-labelledby="removeFileModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="removeFileModalLabel">File Actions</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to remove this file?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Exit</button>
            <button type="button" class="btn btn-danger" id="confirmRemove">Yes</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Share file modal -->
    <div class="modal fade" id="shareFileModal" tabindex="-1" role="dialog" aria-labelledby="shareFileModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="removeFileModalLabel">File Actions</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div id="shareLinkContainer">
              <input type="text" class="form-control mb-2" id="shareLink" readonly />
              <button class="btn btn-info" id="copyToClipboard">Copy to Clipboard</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Include Dropzone.js library -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <script src="/js/search.js"></script>
  </body>
</html>
